<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ml-auto"> <!-- Add ml-auto class here -->
        <% if (email !== null && email !== undefined) { %>
          <a class="nav-item nav-link" href="/tinyapp/urls">My URLs</a>
          <a class="nav-item nav-link" href="/tinyapp/urls/new">Create New URL</a>
        </div>
      <% } %>
    </div>
    <% if (email !== null && email !== undefined) { %>
      <form class="form-inline" action="/tinyapp/logout" method="post" style="margin: 1em">
        <label style="border: 1cm;">Logged In As: <%= email %></label>
        <button type="submit" class="btn btn-outline-dark" style="margin-left: 10px;">Logout</button>
      </form>
    <% } else { %>
      <style>
        .button-spacing {
          margin-right: 10px;
        }
      </style>
      
      <form class="form-inline" action="/tinyapp/login" method="get">
        <button type="submit" class="btn btn-outline-dark button-spacing">Login</button>
      </form>
      <form class="form-inline" action="/tinyapp/register" method="get">
        <button type="submit" class="btn btn-outline-dark">Register</button>
      </form>
    <% } %>
  </nav>
</header>

